<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_tree_view" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state == 'canceled'" decoration-success="state == 'sold'" decoration-warning="state == 'offer_received'" decoration-info="state == 'offer_accepted'">
                <field name="name" class="text-truncate" />
                <field name="tag_ids" widget="many2many_tags" />
                <field name="state" string="State" />
                <field name="type_id" string="Property Type" />
                <field name="postcode" string="Postcode" class="text-truncate" />
                <field name="user_id" string="Salesperson" />
                <field name="buyer_id" string="Buyer" />
                <field name="bedrooms" string="Bedrooms" />
                <field name="total_area" string="Total Area" />
                <field name="expected_price" string="Expected Price" />
                <field name="best_price" string="Best Price available" />
                <field name="selling_price" string="Selling Price" />
                <field name="date_availability" string="Available From" />
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <button name="cancel_sale_property" string="Cancel" type="object" class="btn-danger" />
                    <button name="confirm_sale_property" string="Sold" type="object" class="btn-success" />
                </header>
                <sheet>
                    <!-- TÃTULO GRANDE -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" string="Property Name" placeholder="Property Name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" />
                            <field name="type_id" string="Property Type" />
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_price" readonly="1" />
                            <field name="selling_price" readonly="1" />
                            <field name="state" readonly="1" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <group>
                                <group>
                                    <field name="description" string="Description" />
                                    <field name="bedrooms" />
                                    <field name="total_area" readonly="1" />
                                    <field name="living_area" />
                                    <field name="facades" />
                                </group>
                                <group>
                                    <field name="garage" />
                                    <field name="garden" />
                                    <field name="garden_area" />
                                    <field name="garden_orientation" />
                                </group>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" widget="section_and_note_one2many" readonly="state == 'sold' or state == 'canceled'">
                                <tree>
                                    <field name="partner_id" string="Partner" />
                                    <field name="validity" string="Validity (days)" />
                                    <field name="date_deadline" string="Deadline" />
                                    <field name="price" />
                                    <field name="status">
                                        <attrs>
                                            <attribute name="options">{
                                                    "color_field": "status",
                                                    "colors": {
                                                        "canceled": "danger"
                                                    }
                                                }</attribute>
                                        </attrs>
                                    </field>
                                    <!-- offer_accepted -->
                                    <button name="accept_offer" string="Accept" type="object" icon="fa-check" invisible="status != 'draft' or parent.state in ('offer_accepted', 'sold', 'canceled')" />
                                    <button name="reject_offer" string="Reject" type="object" icon="fa-times" invisible="status != 'draft' or parent.state in ('offer_accepted', 'sold', 'canceled')" />
                                    <button name="cancel_offer" string="Cancel" type="object" icon="fa-undo" class="btn-secondary" invisible="status != 'accepted' or parent.state in ('sold', 'canceled')" />
                                </tree>
                            </field>
                        </page>
                        <page string="Comercial Information">
                            <group>
                                <field name="user_id" string="Salesperson" />
                                <field name="buyer_id" string="Buyer" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name" />
                <field name="postcode" />
                <field name="user_id" string="Salesperson" />
                <field name="buyer_id" string="Buyer" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="type_id" string="Property Type" />
                <separator />
                <!-- Available: state is New OR Offer Received -->
                <filter name="available" string="Available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]" />
                <filter name="type_house" string="Casas" domain="[('type_id.name', '=', 'Casa')]" />
                <separator />
                <!-- Group By postcode -->
                <filter name="group_by_postcode" string="Postcode" context="{'group_by': 'postcode'}" />
                <filter name="group_by_user_id" string="Salesperson" context="{'group_by': 'user_id'}" />
                <filter name="group_by_buyer_id" string="Buyer" context="{'group_by': 'buyer_id'}" />
            </search>
        </field>
    </record>
</odoo>